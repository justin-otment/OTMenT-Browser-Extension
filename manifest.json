{
  "manifest_version": 3,
  "name": "OTMenT v3 â€” People Search Navigator",
  "version": "1.8",
  "description": "Config-driven scraper with Sheets integration, captcha detection, and dynamic orchestration.",

  "permissions": [
    "scripting",
    "storage",
    "tabs",
    "cookies",
    "webRequest",
    "activeTab"
  ],

  "host_permissions": [
    "https://www.peoplesearchnow.com/*",
    "https://www.peoplesearchnow.com/InternalCaptcha?*",
    "https://*.challenges.cloudflare.com/*",
    "https://*.cloudflare.com/*",
    "https://2captcha.com/*",
    "https://api.2captcha.com/*",
    "https://sheets.googleapis.com/*",
    "https://oauth2.googleapis.com/*"
  ],

  "background": {
    "service_worker": "navigator.js",
    "type": "module"
  },

  "options_page": "options.html",

  "web_accessible_resources": [
    {
      "resources": [
        "config.json",
        "service-account.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.peoplesearchnow.com/details/*",
        "https://www.peoplesearchnow.com/address*",
        "https://www.peoplesearchnow.com/find/person/*",
        "https://www.peoplesearchnow.com/name/*"
      ],
      "js": [
        "jquery-3.7.1.min.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://2captcha.com https://api.2captcha.com https://challenges.cloudflare.com https://*.challenges.cloudflare.com https://*.cloudflare.com https://www.google.com/recaptcha/ https://oauth2.googleapis.com https://sheets.googleapis.com https://www.peoplesearchnow.com"
  },

  "action": {
    "default_title": "OTMenT Navigator"
  }
}
